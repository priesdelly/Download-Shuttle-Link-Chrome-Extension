{
  "manifest_version": 3,
  "name": "Download Shuttle Link",
  "version": "1.0.0",
  "description": "Automatically send downloads to Download Shuttle app on macOS",
  "permissions": [
    "downloads",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
